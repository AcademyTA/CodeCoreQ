<br>
<%= link_to 'Back', category_path(@quiz.category) %>
<br>

<h1>Quiz Title: <%= @quiz.title %></h1><br>
<p>Quiz Body: <%= @quiz.body %></p><br>
<p>Quiz Level: <%= @quiz.level %></p><br>
<p>Quiz sCategory: <%= @category.title %></p><br>

<%#= link_to 'My quizzes', quizzes_path %>
<%#= link_to "Add questions", new_quiz_question_path(@quiz) %>
<hr>

<% @questions.each do |q| %>
  Question Title: <%= q.title %> <br>
  Question Body: <%= q.body %> <br>

    <%= form_for q, url: quiz_path(@quiz), method: :update do |f| %>

         <% q.answers.each do |a| %>
       
            Answer Body: 
            <%= f.radio_button(:id, a.id) %>
            <%= f.label(:body, a.body ) %><br>
      
        <%end%>
        <%= f.submit :value => "submit answer" %>
    
    <% end %>

  <hr>
<% end %>


<ul>
  <% @questions.each do |q| %>
    <li><%= link_to q.title, quiz_question_path(@quiz, q) %></li>
  <% end %>
</ul>


<div class="container">


  <!--- BEGIN QUESTION FRAME -->

  
  <div class="question-wrap">
  <div class="col-sm-3 quiz-sidebar">
    <div class="category-logo"><%= image_tag "images/JS_logo.gif", height: 120, width: 120 %></div>
    <div class="quiz-level">
       
        <% if @quiz.level == 1 %>
          Apprentice
        <% end %>

       <% if @quiz.level == 2 %>
          Adept
       <% end %>
       
       <% if @quiz.level == 3 %>
        Code Wizard
       <% end %>
    </div>

    <div class="quiz-points">80</div>
    <div class="quiz-progress">50/100</div>


  </div>
  <div class="col-sm-1">
    <div class="vertical-rule">&nbsp;</div>
  </div>
  <!--- question area -->
  <div class="col-sm-7">
    <!--- display current question progress -->
    <div class="question-current">
        Javascript Level 3 (8/10)

    </div>
    <!--- display full question data ---->
    <div id="question_id">
      <div class="question">What's your name? </div>
      
      <div class="snippet"> Code goes here </div>
      
      <div class="choices"> 
      <a class="choice-link" href="#"> <div class="choice answer-row"><span class="choice-letter">A</span> My choice is this </div></a>
        <a class="choice-link" href="#"><div class="choice answer-row"><span class="choice-letter">B</span> My choice is this </div>
        <a class="choice-link" href="#"><div class="choice answer-row"><span class="choice-letter">C</span> My choice is this </div> 
      </div>

    </div>

  </div>


</div>
</div>







