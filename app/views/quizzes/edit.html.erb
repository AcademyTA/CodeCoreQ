<br>
<div class="form-container">
  <div class="well">
  <h2>Edit Quiz</h2>
    <%= form_for :quiz, url: quiz_path(@quiz), method: :patch do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %><br>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %><br>
    <%= f.label :level %>
    <%= f.number_field :level, class: 'form-control' %><br>
    <%= f.submit class: "btn btn-success" %>
    <%= button_tag "Reset", type: :reset, class: "btn btn-danger" %>
  <% end %>
  </div>
</div>
