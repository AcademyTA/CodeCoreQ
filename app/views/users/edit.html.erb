<div class="session-container">
  <div class="well well-branded">
    <h1>Update your profile</h1>
    <div class="form-group">
      <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>